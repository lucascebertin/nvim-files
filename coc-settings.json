{
  "snippets.textmateSnippetsRoots": [
    "/home/lucasbertin/Projetos/CocNvimSnippets/"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "clojure-lsp": {
      "command": "clojure-lsp",
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj", "deps.edn"],
      "additionalSchemes": ["zipfile", "jar"],
      "disableDiagnostics": false,
      "initializationOptions": {},
      "trace.server": "verbose"
    }
  },
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.trace.server": "verbose",
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",

  "hover.previewMaxHeight": 20,

  "hover.floatConfig": {
    "border": true,
    "maxWidth": 120,
    "maxHeight": 60
  }
}
